<section name        = "CerenkovCntr"
         version     = "1.0"
         date        = "Mon Apr 15, 2001"
         author      = "R.T. Jones"
         top_volume  = "CERE"
         DTD_version = "v1">

  <parameters name="cerenkovCntr_pars" type="mcfast">
    <real 	name="Rmin"	value="20.0"
				unit="cm"	/>
    <real	name="Rmax"	value="95.0"
				unit="cm"	/>
    <real	name="zLength"	value="90.0"
				unit="cm"	/>
    <real	name="zCenter"	value="455.0"
				unit="cm"	/>
  </parameters>


<!-- Currently the mcfast model of the Cerenkov is 1cm of scintillator -->

  <mcfast model="Absorberbox" template="db/absorberbox.db"
			      parameters="cerenkovCntr_pars">
    <string	name="name" 	value="Cerenkov" />
    <string	name="shape" 	value="BOX" 	comment="BOX only" />
    <int	name="type" 	value="2" 	comment="1=barrel, 2=forward" />
    <real_array	name="xlimit"	values="-95.0  95.0" comment="x dimensions"
				unit="cm"	/>
    <real_array	name="ylimit"	values="-95.0  95.0" comment="y dimensions"
				unit="cm"	/>
    <real_array	name="xlimit_gap" values="-6.0  6.0" comment="beam hole x"
				unit="cm"	/>
    <real_array	name="ylimit_gap" values="-6.0  6.0" comment="beam hole y"
				unit="cm"	/>
    <real	name="z0"	value="420.5"	comment="z of midplane"
				unit="cm"	/>
    <real	name="zlen"	value="1.0"	comment="thickness"
				unit="cm"	/>
    <reference	name="material"	value="Scintillator"			    />
  </mcfast>

  <pcon name="CERE" material="Aluminum" comment="Cerenkov counter"
		    parameters="cerenkovCntr_pars">
    <polyplane Rio_Z="5.0  65.0   0.0" />
    <polyplane Rio_Z="5.0  95.0  80.0" />
    <polyplane Rio_Z="5.0 250.0 120.0" />
    <polyplane Rio_Z="5.0 250.0 140.0" />
  </pcon>
  <pcon name="CGAS" material="CerenkovGas" comment="Cerenkov gas volume"
		    parameters="cerenkovCntr_pars">
    <polyplane Rio_Z="5.1  65.1   0.1" />
    <polyplane Rio_Z="5.1  95.1  80.0" />
    <polyplane Rio_Z="5.1 250.1 120.0" />
    <polyplane Rio_Z="5.1 250.1 139.9" />
  </pcon>

  <composition name="cerenkovCntr" envelope="CERE">
    <posXYZ volume="CGAS" X_Y_Z="0.0  0.0  0.0" />
  </composition>

  <composition name="CerenkovCntr">
<!-->
    Origin of CerenkovCntr is center of upstream end.
>>-->
    <posXYZ volume="cerenkovCntr" X_Y_Z="0.0  0.0  0.0" />
  </composition>

</section>

