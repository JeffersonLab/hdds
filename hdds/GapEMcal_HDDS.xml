<section name        = "GapEMcal"
         version     = "1.0"
         date        = "2007-01-11"
         author      = "R.T. Jones"
         top_volume  = "GCAL"
         specification = "v1.0">

<!-- Origin of GapEMcal is center of upstream fac -->

  <composition name="GapEMcal">
    <apply region="nullBfield"/>
    <posXYZ volume="GCAL"/>
  </composition>

  <pcon name="GCAL" material="leadScint" sensitive="true"
                                         comment="gap calorimeter">
    <polyplane Rio_Z="65.0 85.0  0.0" />
    <polyplane Rio_Z="70.3 90.3 30.0" />
  </pcon>

</section>

