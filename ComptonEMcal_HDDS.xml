<section name        = "ComptonEMcal"
         version     = "1.0"
         date        = "2010-04-17"
         author      = "P. Ambrozewicz"
         top_volume  = "CCAL"
         specification = "v1.0">

<!-- Origin of ComptonEMcal is center of upstream face of LTD (Lead Tungstate Detector) -->

  <composition name="ComptonEMcal">
    <apply region="nullBfield"/>
    <posXYZ volume="comptonEMcal" X_Y_Z="0.0  0.0  10.0" />
  </composition>

  <composition name="comptonEMcal" envelope="CCAL">
    <posXYZ volume="Absorber" X_Y_Z="0.0   0.0  -13.03" />
    <posXYZ volume="LTDlower" X_Y_Z="0.0  -7.0   0.0" />
    <posXYZ volume="LTDeast" X_Y_Z="-7.0   0.0   0.0" />
    <posXYZ volume="LTDwest" X_Y_Z="+7.0   0.0   0.0" />
    <posXYZ volume="LTDupper" X_Y_Z="0.0  +7.0   0.0" /> 
  </composition> 
  
  <composition name="Absorber" envelope="ABDO">
    <posXYZ volume="ABSI" X_Y_Z="0.0 0.0 0.0"/>
  </composition>

  <box name="ABDO" X_Y_Z="8.315  8.315  6.05" material="Tungsten" />
  <tubs name="ABSI" Rio_Z="0  1.86   6.05" material="Air" />



  <composition name="LTDlower" envelope="LTDB">
    <mposY volume="LTDfullRow" ncopy="5" Z_X="0.0 0.0" Y0="-4.0" dY="2.0">
      <row value="0" step="1" />
    </mposY>
  </composition>
  

  <composition name="LTDupper" envelope="LTDT">
    <mposY volume="LTDfullRow" ncopy="5" Z_X="0.0 0.0" Y0="-4.0" dY="2.0">
      <row value="7" step="1" />
    </mposY>
  </composition>
  
  
 <composition name="LTDwest" envelope="LTDW">
    <mposY volume="LTDhalfRowWest" ncopy="2" Y0="-1.0" dY="2.0">
      <row value="5 " step="1" />
    </mposY>
  </composition>
  


  <composition name="LTDeast" envelope="LTDE">
    <mposY volume="LTDhalfRowEast" ncopy="2" Y0="-1.0" dY="2.0">
      <row value="5" step="1" />
    </mposY>
  </composition>




  <composition name="LTDfullRow">
    <mposX volume="LTBL" ncopy="12" Y_Z="0.0 0.0" X0="-11.0" dX="2.0">
      <column value="0" step="1" />
    </mposX>
  </composition>




  
  <composition name="LTDhalfRowWest">
    <mposX volume="LTBL" ncopy="5" Y_Z="0.0 0.0" X0="-4.0" dX="2.0">
      <column value="7" step="1" />
    </mposX>
  </composition> 
  
  
  <composition name="LTDhalfRowEast">
    <mposX volume="LTBL" ncopy="5" Y_Z="0.0 0.0" X0="-4.0" dX="2.0">
      <column value="0" step="1" />
    </mposX>
  </composition>    
  




  <box name="CCAL" X_Y_Z="24.0  24.0  34.0"  material="Air"
       comment="Compton EMcal mother" />


  <box name="LTDB" X_Y_Z="24.0  10.0  20.0"  material="Air"
       comment="LTD bottom section"   />

  <box name="LTDT" X_Y_Z="24.0  10.0  20.0"  material="Air"
       comment="LTD top section"      />

  <box name="LTDW" X_Y_Z="10.0   4.0  20.0"  material="Air"
       comment="LTD west section"     />

  <box name="LTDE" X_Y_Z="10.0   4.0  20.0"  material="Air"
       comment="LTD east section"    />



  <box name="LTBL" X_Y_Z="  2.0    2.0  20.0"  material="PWO"
       sensitive="true"	 comment="lead tungstate block"     />


