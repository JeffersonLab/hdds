<section name        = "BeamLine"
         version     = "1.0"
         date        = "Mon Apr 15, 2001"
         author      = "R.T. Jones"
         top_volume  = "BEAM"
         DTD_version = "v1">

  <!-- there is no mcfast model of the photon beamline -->

  <box  name="CAVE" X_Y_Z="200. 200. 1100." material="Air" />
  <tubs name="BEAM" Rio_Z="0.0  0.25 1100." material="Air" />

  <tubs name="COL1" Rio_Z="0.25 10.0  30.0" material="Tungsten" />
  <tubs name="COL2" Rio_Z="0.50 10.0  50.0" material="Nickel" />

  <box name="SMAG" X_Y_Z="20.0 50.0 30.0" material="Air" />
  <box name="SPOL" X_Y_Z="20.0 50.0 14.0" material="Iron" />
  <box name="SGAP" X_Y_Z=" 9.0 50.0  2.0" material="Lead" />

  <box name="ABS1" X_Y_Z="50.0 50.0 500." material="Iron" />
  <box name="HOL1" X_Y_Z=" 2.0  2.0 500." material="Air" />
  <box name="ABS2" X_Y_Z="100. 100. 300." material="Iron" />
  <box name="HOL2" X_Y_Z=" 2.0  2.0 300." material="Air" />
  <box name="WALL" X_Y_Z="200. 200. 50.0" material="Lead" />
  <tubs name="HOLE" Rio_Z="0.0  1.0 50.0" material="Air" />

  <composition name="sweepMagnet" envelope="SMAG">
    <posXYZ volume="SPOL" X_Y_Z="0.0 0.0 -8.0" />
    <posXYZ volume="SPOL" X_Y_Z="0.0 0.0 +8.0" />
    <posXYZ volume="SGAP" X_Y_Z="-5.5 0.0 0.0" />
    <posXYZ volume="SGAP" X_Y_Z="+5.5 0.0 0.0" />
  </composition>

  <composition name="shieldingBlock1" envelope="ABS1">
    <posXYZ volume="HOL1" />
  </composition>
  <composition name="shieldingBlock2" envelope="ABS2">
    <posXYZ volume="HOL2" />
  </composition>
  <composition name="shieldingWall" envelope="WALL">
    <posXYZ volume="HOLE" />
  </composition>

  <composition name="collimatorStack">
    <posXYZ volume="COL1" X_Y_Z="0.0  0.0  25.0" />
    <posXYZ volume="sweepMagnet" X_Y_Z="0.0 0.0 75." rot="90 0 0" />
    <posXYZ volume="shieldingBlock1" X_Y_Z="0.0  0.0  360." />
    <posXYZ volume="COL2" X_Y_Z="0.0  0.0  645." />
    <posXYZ volume="sweepMagnet" X_Y_Z="0.0 0.0 705." rot="90 0 0" />
    <posXYZ volume="shieldingBlock2" X_Y_Z="0.0  0.0  890." />
  </composition>

  <composition name="collimatorCave" envelope="CAVE">
    <posXYZ volume="BEAM" />
    <posXYZ volume="collimatorStack" X_Y_Z="0.0 0.0 -540." />
    <posXYZ volume="shieldingWall" X_Y_Z="0.0 0.0 525." />
  </composition>

  <composition name="BeamLine">
<!-->
     Origin of Beamline is center of the entrance face of the
     primary collimator.
>>-->
    <posXYZ volume="collimatorCave" X_Y_Z="0.0  0.0  540.0" />
  </composition>

</section>

